#include <stdio.h>
int main() 
{
   int a,i,j,c;
   printf("Enter the number of rows: ");
   scanf("%d",&a);
   for(i=a;i>=1;--i) 
   {
      for(c=0;c<a-i;++c)
         printf("  ");
      for(j=i;j<=2*i-1;++j)
         printf("* ");
      for(j=0;j<i-1;++j)
         printf("* ");
      printf("\n");
   }
   return 0;
}
